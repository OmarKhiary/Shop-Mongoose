extends ../layout/main-layout.pug 

block styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="  /css/product.css")

block content
    main
    - var addOrEdit = editing ? 'edit-product' : 'add-product';
        form.product-form(action=('/admin/' + addOrEdit ), method="POST")
            .form-control
                label(for="title") Title
                - var valTitle = editing ? `${product.title}` : '' ; 
                input(type="text", name="title", value=valTitle)#title
            .form-control
                label(for="imageUrl") Image URL
                - var valImageUrl = editing ? `${product.imageUrl}` : '' ; 
                input(type="text", name="imageUrl", value=valImageUrl)#imageUrl
            .form-control
                label(for="Price") Price
                - var valPrice= editing ? `${product.price}` : '' ; 
                input(type="number", name="price",step="0.01",value=valPrice)#price
            .form-control
                label(for="description") Description
                - var valDescription = editing ? `${product.description}` : '' ; 
                textarea(name="description", cols="43", rows="5") #{valDescription}   
                - var valBtn = editing ? 'Update Product' : 'Add Product' ;     
            button.btn(type="submit") #{valBtn}
        
                