extends ../layout/main-layout.pug

block styles

block content

    main 
                if orders.length < 0
                    h1 Nothing Here!
                else     
                ul.orders 
                     each order in orders
                        li.order__item 
                           h1 Order - #{order._id}
                           ul.orders__products
                           each p in order.products
                                li.orders__products-item #{p.title} #{p.quantity}